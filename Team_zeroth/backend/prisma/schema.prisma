generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum CampaignCategory {
  MEDICAL
  DISASTER
  EDUCATION
  HOUSING
  LIVELIHOOD
  OTHER
}

enum CampaignStatus {
  DRAFT
  SUBMITTED
  VERIFIED
  LIVE
  PAUSED
  COMPLETED
  REJECTED
}

enum UserType {
  ADMIN
  USER
  DONOR
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  isVerified  Boolean  @default(false)
  type        UserType @default(USER)
  kycVerified Boolean  @default(false)

  // KYC Data
  phoneNumber    String?
  kycDocuments   Json? // Stores citizenship, passport, photo, signature URLs
  kycSubmittedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[]
  campaigns Campaign[]

  links      CampaignLink[]
  milestones CampaignMilestone[]
  donations  Donation[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  csrfToken String
  expiresAt DateTime

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Campaign {
  id        String @id @default(uuid())
  creatorId String

  title       String
  category    CampaignCategory
  location    String
  description String           @db.LongText
  status      CampaignStatus   @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creator    User                @relation(fields: [creatorId], references: [id])
  media      Json
  links      CampaignLink[]
  milestones CampaignMilestone[]
  donations  Donation[]

  @@index([creatorId])
  @@index([status])
}

model MileStoneReport {
  id                String @id @default(cuid())
  milestoneId       String
  reportDescription String @db.LongText
  reportUrl         Json
}

model CampaignLink {
  id         String @id @default(cuid())
  campaignId String
  userId     String

  label String
  url   String

  createdAt DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@index([campaignId])
}

model CampaignMilestone {
  id         String @id @default(cuid())
  campaignId String
  userId     String

  title       String
  description String   @db.LongText
  targetDate  DateTime
  isCompleted Boolean  @default(false)

  createdAt DateTime @default(now())

  campaign     Campaign @relation(fields: [campaignId], references: [id])
  user         User     @relation(fields: [userId], references: [id])
  target       BigInt   @default(0)
  raisedAmount BigInt   @default(0)

  @@index([campaignId])
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
}

model Donation {
  id         String   @id @default(cuid())
  campaignId String
  userId     String?
  amount     BigInt
  anonymous  Boolean  @default(false)
  message    String?
  createdAt  DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id])
  user     User?    @relation(fields: [userId], references: [id])

  @@index([campaignId])
  @@index([userId])
}
